{
  "scripts": {
    "bootstrap": "yarn submodules && (cd deck.gl; yarn bootstrap) && ./scripts/init.sh",
    "submodules": "git submodule update --init --recursive",
    "build:markdown": "./scripts/build-markdown.sh",
    "build:website": "(cd website; yarn; yarn build)",
    "build": "yarn build:markdown && yarn build:website",
    "start": "yarn build:markdown && (cd website; yarn; yarn develop)",
    "deploy:gatsby": "(cd website; yarn deploy)",
    "build:sphinx": "(cd deck.gl/bindings/pydeck/docs; sphinx-build -b html . _build_html; touch _build_html/docs/.nojekyll; cp ../../../../website/static/CNAME _build_html)",
    "deploy:sphinx": "yarn build:sphinx; yarn; NODE_DEBUG=gh-pages gh-pages -d deck.gl/bindings/pydeck/docs/_build_html"
  },
  "devDependencies": {
    "gh-pages": "^2.1.0"
  }
}
